<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ETTotalViajantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hintTotalDeViajantes"
                android:inputType="number"
                android:minHeight="48dp"
                android:autofillHints=""></EditText>

            <EditText
                android:id="@+id/ETTDuracaoViagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hintDuracaoViagem"
                android:inputType="number"
                android:minHeight="48dp"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/TextGasolina"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotalEstimadoGas"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextMediaQuilometragem"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextCustoMedioPorLitro"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotalVeiculos"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="@string/TextValor"></TextView>

                <EditText
                    android:id="@+id/ETTTotalDeKm"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"></EditText>

                <EditText
                    android:id="@+id/ETTMediaKMPorLitro"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"></EditText>

                <EditText
                    android:id="@+id/ETTCustoMedioLitro"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"></EditText>

                <EditText
                    android:id="@+id/ETTTotalDeVeiculos"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"></EditText>

                <EditText
                    android:id="@+id/TETotalGasolina"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar a viagem?"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btAdicionarGasolina"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Background"
                        android:textColor="@color/CorPrimaria"
                        android:text="Sim"></Button>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/TextTarifaAerea" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/CustoEstimadoPessoa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextAluguelVeiculo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/TextValor"></TextView>
                <EditText
                    android:id="@+id/ETAereaCustoEstimadoPessoa"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
                <EditText
                    android:id="@+id/ETAluguelVeiculo"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
                <EditText
                    android:id="@+id/TETotalAerea"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Adicionar a Viagem?" />

                <Button
                    android:id="@+id/btAdicionarAerea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Background"
                    android:textColor="@color/CorPrimaria"
                    android:text="Sim"></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/TextRefeicao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextCustoEstimadorefeicao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextRefeicaoPorDia"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TextValor"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/ETRefeicaoCustoEstimado"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>

                <EditText
                    android:id="@+id/ETRefeicoesPorDia"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>

                <EditText
                    android:id="@+id/TETotalRefeicao"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Adicionar a Viagem?" />

                <Button
                    android:id="@+id/btAdicionarRefeicao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Background"
                    android:textColor="@color/CorPrimaria"
                    android:text="Sim"></Button>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/TextHospedagem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextCustoMedioPorNoite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotalNoites"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotalQuartos"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/TextTotal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/TextValor"></TextView>
                <EditText
                    android:id="@+id/ETHospedagemCustoMedio"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
                <EditText
                    android:id="@+id/ETTotalNoites"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
                <EditText
                    android:id="@+id/ETTotalQuartos"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
                <EditText
                    android:id="@+id/TETotalHospedagem"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BTAdicionarHospedagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Adicionar a Viagem?" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Background"
                    android:textColor="@color/CorPrimaria"
                    android:text="Sim"></Button>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>


</LinearLayout>